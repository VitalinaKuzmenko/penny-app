{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2021", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@schemas/*": ["packages/schemas/*"],
      "@schemas-nest/*": ["packages/schemas-nest/*"],
      "@ui/*": ["apps/ui/*"],
      "@server/*": ["apps/server/*"]
    }
  }
}
