{
  "name": "penny-monorepo",
  "private": true,
  "packageManager": "pnpm@10.26.0",
  "scripts": {
    "lint": "pnpm -r lint",
    "lint:ui": "pnpm --filter penny-app-ui lint",
    "lint:server": "pnpm --filter penny-app-server lint",
    "format": "pnpm -r format",
    "build:schemas": "pnpm --filter schemas build",
    "build:ui": "pnpm --filter penny-app-ui build",
    "build:server": "pnpm --filter penny-app-server build",
    "build:all": "pnpm -r build"
  },
  "devDependencies": {
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "prettier": "^3.7.4"
  }
}
